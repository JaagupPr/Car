@model IEnumerable<Car.Models.CarViewModel>

@{
    ViewData["Title"] = "Car Inventory";
    int rowNumber = 1;
}

<div class="h1 mb-4">
    @ViewData["Title"]
</div>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Cars" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Car
    </a>
</div>

<form method="post">
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Build</th>
                <th>Model</th>
                <th>Car Type</th>
                <th>Fuel</th>
                <th>Created at</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@car.Build</td>
                    <td>@car.Model</td>
                    <td>@car.CarType</td>
                    <td>@car.Fuel</td>
                    <td>@car.CreatedAt.ToString("g")</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-outline-info">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>