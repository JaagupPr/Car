@model Car.Models.CreateCarViewModel

@{
    ViewData["Title"] = "Create Car";
}

<h1>Create Car</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Build" class="control-label"></label>
        <input asp-for="Build" class="form-control" />
        <span asp-validation-for="Build" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CarType" class="control-label"></label>
        <input asp-for="CarType" class="form-control" />
        <span asp-validation-for="CarType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fuel" class="control-label"></label>
        <input asp-for="Fuel" class="form-control" />
        <span asp-validation-for="Fuel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mileage" class="control-label"></label>
        <input asp-for="Mileage" class="form-control" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Doors" class="control-label"></label>
        <input asp-for="Doors" class="form-control" />
        <span asp-validation-for="Doors" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Seats" class="control-label"></label>
        <input asp-for="Seats" class="form-control" />
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DailyRate" class="control-label"></label>
        <input asp-for="DailyRate" class="form-control"
               type="number"
               step="0.01" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Cars" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}